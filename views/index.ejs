            <div class="table-data">
                <h2>Available books in library </h2>
                    <table border="2">
                        <tr>
                            <th>Isbn</th>
                            <th>name</th>
                            <th>Author</th>
                            <th>publishedOn</th>
                           
                        </tr>
                        
                        <%
                        if(userData.length!=0){
                        var i=1;
                        userData.forEach(function(result){
                        %>
                        <tr>
                            <td><%=result.isbn; %></td>
                            <td><%=result.name %></td>
                            <td><%=result.Author %></td>
                            <td><%=result.publisheOn %></td>
                           
                            
                            <td style="background-color: rgba(11, 204, 11, 0.596);">Available</td>
                        </tr>
                        <%  i++; }) %>
                        <% } else{ %>
                            <tr>
                                <td colspan="7"><h2>No books available</h2></td>
                            </tr>
                        <% } %>
