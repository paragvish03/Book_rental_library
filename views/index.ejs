    <input type="text" name="userid" placeholder="userid" required>
    <button type="submit">Return </button>

</form>
<h3>Check rented book by user</h3>
<form  class="form1" action="/rent/bookbyuser" method="get">
    <input type="text" name="userid" placeholder="userid" required>
    <button type="submit">check </button>

</form>


